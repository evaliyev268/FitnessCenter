@model List<FitnessCenter.WebApp.Models.Appointment>

    @{
    ViewData["Title"] = "Randevularým";
    }

    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-warning"><i class="fas fa-calendar-alt"></i> Randevularým</h2>
            <a asp-action="Create" class="btn btn-warning fw-bold"><i class="fas fa-plus"></i> Yeni Randevu Al</a>
        </div>

        @if (Model.Count == 0)
    {
        <div class="alert alert-info text-center p-4">
            <h4>Henüz bir randevunuz bulunmuyor.</h4>
            <p>Hedeflerine ulaþmak için ilk adýmý at!</p>
            <a asp-action="Create" class="btn btn-outline-info">Hemen Randevu Al</a>
        </div>
    }
    else
    {
        <div class="card shadow border-0">
            <div class="card-body p-0">
                <table class="table table-hover table-striped mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Tarih & Saat</th>
                            <th>Hizmet</th>
                            <th>Eðitmen</th>
                            <th>Durum</th>
                            <th>Ücret</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                {
                        <tr>
                            <td class="fw-bold">@item.AppointmentDate.ToString("dd.MM.yyyy HH:mm")</td>
                            <td><span class="badge bg-primary">@item.Service?.Name</span></td>
                            <td>@item.Trainer?.Name</td>

                            <td>
                                @if(item.Status == "Bekliyor") { <span class="badge bg-warning text-dark">Onay Bekliyor</span> }
                            else if(item.Status == "Onaylandý") { <span class="badge bg-success">Onaylandý</span> }
                            else { <span class="badge bg-danger">@item.Status</span> }
                            </td>

                            <td>@item.Service?.Price TL</td>
                        </tr>
                }
                    </tbody>
                </table>
            </div>
        </div>
    }
    </div>
