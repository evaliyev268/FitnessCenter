@{
    ViewData["Title"] = "Ana Sayfa";
}

<!-- Hero Section -->
<div class="p-5 mb-4 bg-light rounded-3 jumbotron-bg text-white text-center"
     style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('https://images.unsplash.com/photo-1534438327276-14e5300c3a48? ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80');
     background-size: cover; background-position: center; height: 500px; display: flex; flex-direction: column; justify-content: center;">
    <div class="container-fluid py-5">
        <h1 class="display-3 fw-bold">SINIRLARINI ZORLA</h1>
        <p class="col-md-8 fs-4 mx-auto">Profesyonel ekipmanlar ve uzman eğitmenlerle hayalindeki vücuda kavuş.</p>
        @if (User.Identity.IsAuthenticated)
        {
            <a href="@Url.Action("Create", "Appointment")" class="btn btn-warning btn-lg fw-bold mt-3">RANDEVU AL</a>
        }
        else
        {
            <a href="@Url.Action("Register", "Account")" class="btn btn-warning btn-lg fw-bold mt-3">ÜYE OL</a>
        }
    </div>
</div>

<!-- Hizmetler Bölümü -->
<div class="container my-5">
    <h2 class="text-center mb-4 fw-bold">HİZMETLERİMİZ</h2>
    <div class="row text-center">
        @if (ViewBag.Services != null && ViewBag.Services.Count > 0)
        {
            foreach (var service in ViewBag.Services)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow-sm border-0">
                        <img src="@service.ImageUrl" class="card-img-top" alt="@service.Name" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title fw-bold">@service.Name</h5>
                            <p class="card-text text-muted">@service.Description</p>
                            <p class="text-warning fw-bold fs-5">@service.Price.ToString("N2") TL</p>
                            <p class="text-muted"><i class="fas fa-clock"></i> @service.Duration dakika</p>
                            <a href="@Url.Action("Details", "Services", new { id = service.Id })" class="btn btn-outline-dark">Detaylar</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-center">Henüz hizmet eklenmemiş.</p>
        }
    </div>
    <div class="text-center mt-4">
        <a href="@Url.Action("Index", "Services")" class="btn btn-warning btn-lg">TÜM HİZMETLERİ GÖR</a>
    </div>
</div>

<!-- Eğitmenler Bölümü -->
<div class="container my-5">
    <h2 class="text-center mb-4 fw-bold">UZMAN EĞİTMENLERİMİZ</h2>
    <div class="row">
        @if (ViewBag.Trainers != null && ViewBag.Trainers.Count > 0)
        {
            foreach (var trainer in ViewBag.Trainers)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow-sm border-0 text-center">
                        <img src="@trainer.ImageUrl" class="card-img-top rounded-circle mx-auto mt-3" alt="@trainer. Name" style="width: 150px; height: 150px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title fw-bold">@trainer.Name</h5>
                            <p class="text-muted">@trainer.Speciality</p>
                            <a href="@Url.Action("Details", "Trainers", new { id = trainer.Id })" class="btn btn-outline-dark btn-sm">Profili Gör</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-center">Henüz eğitmen eklenmemiş.</p>
        }
    </div>
    <div class="text-center mt-4">
        <a href="@Url.Action("Index", "Trainers")" class="btn btn-warning btn-lg">TÜM EĞİTMENLER</a>
    </div>
</div>