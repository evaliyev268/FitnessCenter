@{
    ViewData["Title"] = "Giriþ Yap";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-4">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-dark text-white text-center py-3">
                <h3 class="mb-0 fw-bold">GÝRÝÞ YAP</h3>
            </div>
            <div class="card-body p-4">

                @if (ViewBag.Error != null)
                {
                <div class="alert alert-danger">@ViewBag.Error</div>
                }

                <form asp-action="Login" method="post">
                    <div class="mb-3">
                        <label class="form-label fw-bold">E-Posta</label>
                        <input name="email" type="email" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Þifre</label>
                        <input name="password" type="password" class="form-control" required />
                    </div>

                    <button type="submit" class="btn btn-warning w-100 fw-bold py-2 mt-2">GÝRÝÞ YAP</button>
                </form>
            </div>
            <div class="card-footer text-center bg-white border-0 pb-4">
                <small>Hesabýn yok mu? <a asp-action="Register" class="text-warning fw-bold">Kayýt Ol</a></small>
            </div>
        </div>
    </div>
</div>