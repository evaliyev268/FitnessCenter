@model List<FitnessCenter.WebApp.Models.Appointment>

    @{
    ViewData["Title"] = "Eðitmen Paneli";
    }

    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-primary fw-bold"><i class="fas fa-clipboard-list"></i> Randevu Talepleri</h2>
            <span class="badge bg-secondary">@User.Identity.Name</span>
        </div>

        @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Tarih & Saat</th>
                            <th>Öðrenci</th>
                            <th>Hizmet</th>
                            <th>Durum</th>
                            <th>Ýþlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold">@item.AppointmentDate.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>@item.User?.FullName</td>
                            <td>@item.Service?.Name</td>
                            <td>
                                @if(item.Status == "Bekliyor") { <span class="badge bg-warning text-dark">Bekliyor</span> }
                                else if(item.Status == "Onaylandý") { <span class="badge bg-success">Onaylandý</span> }
                                else { <span class="badge bg-danger">@item.Status</span> }
                            </td>
                            <td>
                                @if(item.Status == "Bekliyor")
                                {
                                <form asp-action="Approve" asp-route-id="@item.Id" method="post" class="d-inline">
                                    <button class="btn btn-sm btn-success"><i class="fas fa-check"></i> Onayla</button>
                                </form>
                                <form asp-action="Reject" asp-route-id="@item.Id" method="post" class="d-inline ms-1">
                                    <button class="btn btn-sm btn-danger"><i class="fas fa-times"></i> Reddet</button>
                                </form>
                                }
                                else
                                {
                                <span class="text-muted small">Ýþlem Yapýldý</span>
                                }
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
