@{
    ViewData["Title"] = "Admin Paneli";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6 fw-bold text-dark">Yönetici Paneli</h1>
        <span class="badge bg-danger p-2">Admin Yetkisi Aktif</span>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body text-center p-5">
                    <i class="fas fa-users fa-3x text-primary mb-3"></i>
                    <h3 class="card-title">Üyeler</h3>
                    <p class="card-text text-muted">Sisteme kayýtlý üyeleri görüntüle.</p>
                    <a asp-action="Users" class="btn btn-outline-primary">Üyeleri Listele</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body text-center p-5">
                    <i class="fas fa-dumbbell fa-3x text-warning mb-3"></i>
                    <h3 class="card-title">Eðitmenler</h3>
                    <p class="card-text text-muted">Eðitmen ekle, düzenle veya sil.</p>
                    <a asp-action="Trainers" class="btn btn-outline-warning text-dark">Eðitmenleri Yönet</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body text-center p-5">
                    <i class="fas fa-list-ul fa-3x text-info mb-3"></i>
                    <h3 class="card-title">Hizmetler</h3>
                    <p class="card-text text-muted">Fiyatlarý ve süreleri güncelle.</p>
                    <a asp-action="Services" class="btn btn-outline-info text-dark">Hizmetleri Yönet</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body text-center p-5">
                    <i class="fas fa-calendar-alt fa-3x text-success mb-3"></i>
                    <h3 class="card-title">Randevular</h3>
                    <p class="card-text text-muted">Aktif randevularý kontrol et.</p>
                    <a asp-action="Appointments" class="btn btn-outline-success text-dark">Randevularý Gör</a>
                </div>
            </div>
        </div>
    </div>
</div>