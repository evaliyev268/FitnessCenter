@model FitnessCenter.WebApp.Models.Service

<div class="container mt-5 col-md-6">
    <div class="card shadow">
        <div class="card-header bg-warning text-dark">
            <h4>Hizmeti Düzenle</h4>
        </div>
        <div class="card-body">
            <form asp-action="EditService" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label>Hizmet Adý</label>
                    <input asp-for="Name" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label>Çalýþma Saatleri</label>
                    <input asp-for="WorkingHours" class="form-control" placeholder="Örn: 09:00 - 22:00" required />
                </div>

                <div class="mb-3">
                    <label>Süre (Dakika)</label>
                    <input asp-for="Duration" type="number" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label>Fiyat (TL)</label>
                    <input asp-for="Price" type="number" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label>Resim URL</label>
                    <input asp-for="ImageUrl" class="form-control" />
                </div>
                <button type="submit" class="btn btn-warning w-100">Güncelle</button>
            </form>
        </div>
    </div>
    <a asp-action="Services" class="btn btn-secondary mt-2">Ýptal</a>
</div>