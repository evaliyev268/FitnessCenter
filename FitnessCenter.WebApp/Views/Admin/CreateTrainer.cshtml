@model FitnessCenter.WebApp.Models.Trainer

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Yeni Eðitmen Ekle</h4>
                </div>
                <div class="card-body">
                    <form asp-action="CreateTrainer" method="post">
                        <div class="mb-3">
                            <label class="form-label">Ad Soyad</label>
                            <input asp-for="Name" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Verdiði Hizmet (Branþ)</label>
                            <select asp-for="ServiceId" class="form-select" asp-items="ViewBag.Services" required>
                                <option value="">-- Bir Hizmet Seçin --</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Uzmanlýk Alaný (Görünür Yazý)</label>
                            <input asp-for="Speciality" class="form-control" placeholder="Örn: Yoga, Pilates, Fitness" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Resim URL</label>
                            <input asp-for="ImageUrl" class="form-control" placeholder="https://..." />
                            <small class="text-muted">Ýnternetten bir resim linki yapýþtýrýn.</small>
                        </div>
                        <button type="submit" class="btn btn-success w-100">Kaydet</button>
                    </form>
                </div>
            </div>
            <a asp-action="Trainers" class="btn btn-link mt-2 text-muted">Ýptal</a>
        </div>
    </div>
</div>