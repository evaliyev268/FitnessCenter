@model List<FitnessCenter.WebApp.Models.User>

    <div class="container mt-5">
        <h2 class="mb-4">Kayýtlý Üyeler</h2>

        <table class="table table-hover shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Ad Soyad</th>
                    <th>E-Posta</th>
                    <th>Rol</th>
                    <th>Ýþlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>
                        @if(user.Role == "Admin") { <span class="badge bg-danger">Admin</span> }
                else { <span class="badge bg-info">Üye</span> }
                    </td>
                    <td>
                        @if (user.Email != User.Identity.Name)
                            {
                        <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" onsubmit="return confirm('Bu üyeyi silmek istediðine emin misin?');">
                            <button type="submit" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> Sil</button>
                        </form>
                            }
                    </td>
                </tr>
                }
            </tbody>
        </table>
        <a asp-action="Index" class="btn btn-secondary mt-3">&larr; Panele Dön</a>
    </div>
