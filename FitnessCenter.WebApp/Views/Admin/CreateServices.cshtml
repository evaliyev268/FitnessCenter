@model FitnessCenter.WebApp.Models.Service

<div class="container mt-5 col-md-6">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4>Yeni Hizmet Tanýmla</h4>
        </div>
        <div class="card-body">
            <form asp-action="CreateService" method="post">
                <div class="mb-3">
                    <label>Hizmet Adý</label>
                    <input asp-for="Name" class="form-control" required placeholder="Örn: Yoga Seansý" />
                </div>
                <div class="mb-3">
                    <label>Süre (Dakika)</label>
                    <input asp-for="Duration" type="number" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label>Fiyat (TL)</label>
                    <input asp-for="Price" type="number" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label>Resim URL</label>
                    <input asp-for="ImageUrl" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary w-100">Kaydet</button>
            </form>
        </div>
    </div>
</div>