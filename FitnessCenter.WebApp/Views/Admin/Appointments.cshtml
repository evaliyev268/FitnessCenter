@model List<FitnessCenter.WebApp.Models.Appointment>

    @{
    ViewData["Title"] = "Randevu Yönetimi";
    Layout = "_Layout";
    }

    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold"><i class="fas fa-calendar-check text-warning"></i> Randevu Listesi</h2>
            <span class="badge bg-secondary p-2">Toplam: @Model.Count Randevu</span>
        </div>

        @if (Model.Count == 0)
    {
        <div class="alert alert-info text-center">
            Henüz alýnmýþ bir randevu bulunmuyor.
        </div>
    }
    else
    {
        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <table class="table table-hover table-striped mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Tarih & Saat</th>
                            <th>Üye Adý</th>
                            <th>Hizmet (Ders)</th>
                            <th>Eðitmen</th>
                            <th>Ücret</th>
                            <th class="text-center">Ýþlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr class="align-middle">
                            <td class="fw-bold">@item.AppointmentDate.ToString("dd.MM.yyyy HH:mm")</td>

                            <td>
                                <i class="fas fa-user-circle text-muted"></i>
                                @(item.User != null ? item.User.FullName : "Silinmiþ Üye")
                            </td>

                            <td>
                                <span class="badge bg-primary">@item.Service?.Name</span>
                            </td>

                            <td>@item.Trainer?.Name</td>

                            <td class="text-success fw-bold">@item.Service?.Price TL</td>

                            <td class="text-center">
                                <form asp-action="DeleteAppointment" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Bu randevuyu iptal etmek istediðinize emin misiniz?');">
                                    <button type="submit" class="btn btn-sm btn-danger shadow-sm">
                                        <i class="fas fa-trash-alt"></i> Ýptal Et
                                    </button>
                                </form>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

        <div class="mt-3">
            <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Panele Dön
            </a>
        </div>
    </div>
