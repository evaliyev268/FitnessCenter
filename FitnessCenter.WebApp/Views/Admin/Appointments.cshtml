@model List<FitnessCenter.WebApp.Models.Appointment>

    @{
    ViewData["Title"] = "Tüm Randevular";
    Layout = "_Layout";
    }

    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold text-dark">Tüm Randevu Listesi</h2>
            <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">&larr; Panele Dön</a>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <table class="table table-hover table-striped mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Tarih</th>
                            <th>Üye</th>
                            <th>Hizmet</th>
                            <th>Eðitmen</th>
                            <th>Durum</th>
                            <th>Ýþlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                    {
                        <tr class="align-middle">
                            <td class="fw-bold">@item.AppointmentDate.ToString("dd.MM.yyyy HH:mm")</td>

                            <td>
                                <i class="fas fa-user-circle text-muted"></i>
                                @(item.User != null ? item.User.FullName : "Silinmiþ Üye")
                            </td>

                            <td><span class="badge bg-info text-dark">@item.Service?.Name</span></td>
                            <td>@item.Trainer?.Name</td>

                            <td>
                                @if(item.Status == "Bekliyor") { <span class="badge bg-warning text-dark">Onay Bekliyor</span> }
                                else if(item.Status == "Onaylandý") { <span class="badge bg-success">Onaylandý</span> }
                                else { <span class="badge bg-danger">@item.Status</span> }
                            </td>

                            <td>
                                <form asp-action="DeleteAppointment" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Bu randevuyu sistemden tamamen silmek istediðine emin misin?');">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash-alt"></i> Sil
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
