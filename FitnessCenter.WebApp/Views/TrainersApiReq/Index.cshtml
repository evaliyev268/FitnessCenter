@model List<FitnessCenter.WebApp.Models.Trainer>

@{
    ViewData["Title"] = "Egitmenlerimiz";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h2 class="display-5 fw-bold">UZMAN KADROMUZ</h2>
        <p class="text-muted">Hedeflerine ulasman icin yanindayiz.</p>
    </div>

    <div class="row">
        @foreach (var trainer in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card text-center shadow border-0 h-100">
                    <div class="card-body p-4">
                        <img src="@trainer.ImageUrl"
                             class="rounded-circle mb-3 border border-3 border-warning"
                             width="120"
                             height="120"
                             style="object-fit:cover;"
                             alt="@trainer.Name">
                        <h5 class="card-title fw-bold">@trainer.Name</h5>
                        <p class="card-text text-warning fw-bold">@trainer.Speciality</p>
                        <p class="text-muted small">
                            Profesyonel destek almak icin randevu olusturun.
                        </p>
                        <a href="#" class="btn btn-sm btn-outline-dark">
                            Profilini Gor
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>